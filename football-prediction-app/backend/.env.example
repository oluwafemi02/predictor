# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/dbname

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# SportMonks API Configuration
SPORTMONKS_API_KEY=your-sportmonks-api-key-here
SPORTMONKS_FALLBACK_TOKENS=token1,token2,token3

# Security Configuration
TOKEN_ENCRYPTION_PASSWORD=strong-password-for-token-encryption
TOKEN_ENCRYPTION_SALT=random-salt-for-encryption
INTERNAL_API_KEYS=key1,key2,key3

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.com,https://another-allowed-domain.com

# Scheduler Configuration
ENABLE_SCHEDULER=true
IS_SCHEDULER_INSTANCE=true

# Other API Keys (if needed)
FOOTBALL_API_KEY=your-football-data-api-key
RAPIDAPI_KEY=your-rapidapi-key

# Celery Configuration (optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0