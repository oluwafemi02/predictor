# Football Prediction App - Backend Environment Variables
# Copy this file to .env and fill in the values

# Flask Configuration
FLASK_ENV=development  # Options: development, production
SECRET_KEY=  # Generate with: python -c "import secrets; print(secrets.token_hex(32))"

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/football_prediction  # PostgreSQL connection string
# For Render: This will be automatically populated from the database service

# Redis Configuration
REDIS_URL=redis://localhost:6379/0  # Redis connection string
# For Render: This will be automatically populated from the Redis service

# API Keys - External Services
FOOTBALL_API_KEY=  # football-data.org API key (if using)
RAPIDAPI_KEY=  # RapidAPI key for football odds
SPORTMONKS_API_KEY=  # SportMonks API key (primary)
SPORTMONKS_FALLBACK_TOKENS=  # Comma-separated backup SportMonks tokens

# Security - Token Encryption
TOKEN_ENCRYPTION_PASSWORD=  # Strong password for encrypting stored tokens (min 16 chars)
TOKEN_ENCRYPTION_SALT=  # Salt for key derivation (min 16 chars)
# Generate both with: python -c "import secrets; print(f'PASSWORD: {secrets.token_urlsafe(32)}\nSALT: {secrets.token_urlsafe(32)}')"

# Internal API Security
INTERNAL_API_KEYS=  # Comma-separated API keys for internal services
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173  # Comma-separated allowed origins
# For production: Add your frontend URLs, e.g., https://your-frontend.onrender.com

# Scheduler Configuration
ENABLE_SCHEDULER=false  # Enable background scheduler (true/false)
IS_SCHEDULER_INSTANCE=false  # Mark this instance as the scheduler (true/false)

# Monitoring & Error Tracking
SENTRY_DSN=  # Sentry DSN for error tracking (optional)

# Feature Flags
SPORTMONKS_ENABLED=true  # Enable SportMonks integration
ENABLE_VALUE_BETS=true  # Enable value betting features
ENABLE_LIVE_SCORES=true  # Enable live score updates

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60  # Max requests per minute per IP
RATE_LIMIT_PER_HOUR=1000  # Max requests per hour per IP

# Cache Configuration
CACHE_DEFAULT_TIMEOUT=300  # Default cache timeout in seconds
CACHE_LIVE_SCORES_TIMEOUT=30  # Live scores cache timeout
CACHE_PREDICTIONS_TIMEOUT=1800  # Predictions cache timeout

# Model Configuration
MODEL_UPDATE_INTERVAL=3600  # Model update interval in seconds
PREDICTION_CONFIDENCE_THRESHOLD=0.6  # Minimum confidence for predictions

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=backend.log  # Log file path

# Example values for local development:
# SECRET_KEY=dev-secret-key-change-in-production
# DATABASE_URL=sqlite:///football_predictions.db
# REDIS_URL=redis://localhost:6379/0
# TOKEN_ENCRYPTION_PASSWORD=dev-password-change-in-production
# TOKEN_ENCRYPTION_SALT=dev-salt-change-in-production
# INTERNAL_API_KEYS=dev-api-key-1,dev-api-key-2
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173