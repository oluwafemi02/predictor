# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# SportMonks API Configuration (at least one required)
SPORTMONKS_API_KEY=your-sportmonks-api-key
SPORTMONKS_PRIMARY_TOKEN=your-primary-sportmonks-token
SPORTMONKS_FALLBACK_TOKENS=token1,token2,token3

# RapidAPI Configuration (for odds data)
RAPIDAPI_KEY=your-rapidapi-key

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
CORS_ORIGINS=https://football-prediction-frontend-zx5z.onrender.com,https://football-prediction-backend-2cvi.onrender.com

# Token Encryption (required in production)
TOKEN_ENCRYPTION_PASSWORD=your-encryption-password
TOKEN_ENCRYPTION_SALT=your-encryption-salt

# Scheduler Configuration
ENABLE_SCHEDULER=true

# Celery Configuration (optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0