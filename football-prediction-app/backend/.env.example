# Security Configuration
SECRET_KEY=your-secret-key-here-change-this
TOKEN_ENCRYPTION_PASSWORD=strong-password-for-encryption
TOKEN_ENCRYPTION_SALT=unique-salt-value-change-this
INTERNAL_API_KEYS=generate-secure-keys-comma-separated

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/football_predictions
# For SQLite (development): sqlite:///football_predictions.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Keys
SPORTMONKS_API_KEY=your-sportmonks-api-key
SPORTMONKS_FALLBACK_TOKENS=token1,token2,token3
RAPIDAPI_KEY=your-rapidapi-key
FOOTBALL_API_KEY=your-football-data-org-key

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Application Settings
FLASK_ENV=development
ENABLE_SCHEDULER=false
IS_SCHEDULER_INSTANCE=false

# JWT Configuration (optional - uses SECRET_KEY if not set)
JWT_SECRET_KEY=your-jwt-secret-key

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=INFO