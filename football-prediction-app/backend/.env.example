# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-generate-a-strong-one

# Database Configuration
# Render will automatically provide DATABASE_URL
# DATABASE_URL=postgresql://user:password@host:port/dbname

# API Keys
FOOTBALL_API_KEY=your-football-api-key
RAPIDAPI_KEY=your-rapidapi-key

# Redis Configuration (optional - for caching and Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=https://your-frontend-url.onrender.com,https://your-custom-domain.com

# Python Version for Render
PYTHON_VERSION=3.11.0