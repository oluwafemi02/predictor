# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/football_predictions

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Keys - External Services
FOOTBALL_API_KEY=your-football-data-api-key
SPORTMONKS_API_KEY=your-sportmonks-api-key
SPORTMONKS_PRIMARY_TOKEN=your-primary-sportmonks-token
SPORTMONKS_FALLBACK_TOKENS=token1,token2,token3
RAPIDAPI_KEY=your-rapidapi-key

# Token Encryption (Required in Production)
TOKEN_ENCRYPTION_PASSWORD=strong-password-change-in-production
TOKEN_ENCRYPTION_SALT=unique-salt-change-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Scheduler Configuration
ENABLE_SCHEDULER=false
IS_SCHEDULER_INSTANCE=false

# Internal API Keys (comma-separated)
INTERNAL_API_KEYS=key1,key2,key3

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring Configuration
ENABLE_MONITORING=true
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Model Configuration
MODEL_UPDATE_INTERVAL=3600
PREDICTION_CONFIDENCE_THRESHOLD=0.6

# Cache Configuration
CACHE_DEFAULT_TIMEOUT=300
CACHE_LIVE_SCORES_TIMEOUT=30
CACHE_PREDICTIONS_TIMEOUT=1800
CACHE_STATIC_DATA_TIMEOUT=86400